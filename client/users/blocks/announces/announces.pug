each announce in self.announces || []
  - var can_hide = !!announce.hide_days

  .announce.alert.alert-warning(
    class=can_hide ? 'alert-dismissible fade show' : ''
  )
    if can_hide
      button.close.icon.icon-x(
        data-dismiss='alert'
        aria-label='close'
        data-on-click='users.blocks.announces:hide'
        data-announce-id=announce.id
      )
    != self.t('@common.announces.' + announce.id)
