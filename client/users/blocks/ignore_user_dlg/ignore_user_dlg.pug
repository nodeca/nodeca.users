.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      form.ignore-user-dlg(data-on-submit=self.apiPath + ':submit')
        .modal-header
          h4.modal-title=self.t('title')
          button.btn-close(type='button' tabindex='-1' data-bs-dismiss='modal')
        .modal-body
          .mb-3
            a(href=self.link_to('users.member', { user_hid: self.user.hid }))
              img.ignore-user-dlg__avatar(alt=self.user.name)&attributes(self.avatar(self.user, 'sm'))
              = self.user.name

          input(name='user', type='hidden', value=self.user._id)

          .mb-3
            input.form-control(type='text', name='reason', placeholder=self.t('input_reason_placeholder'), tabindex='2')

          .mb-3
            select.form-control.form-select(name='period', tabindex='1')
              option(value='0')=self.t('period_forever')
              option(value='7')=self.t('period_7d')
              option(value='30')=self.t('period_30d')
              option(value='90')=self.t('period_90d')
              option(value='365')=self.t('period_365d')

        .modal-footer
          button.btn.btn-secondary(type='button' tabindex='3' data-bs-dismiss='modal')=self.t('cancel')
          button.btn.btn-danger(type='submit' tabindex='4')=self.t('ok')
