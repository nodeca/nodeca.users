.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      form(data-on-submit='users.media.edit:submit')
        .modal-header
          h4.modal-title= self.t('title')
          button.btn-close(type='button' tabindex='-1' data-bs-dismiss='modal')
        .modal-body
          label.form-label= self.t('album_input_name')
          select.form-control.form-select(name='album_id' tabindex='1')
            each album in self.albums
              option(
                value=album._id
                selected=(self.media.album === album._id)
              )= album.title || self.t('default_album_name')
        .modal-footer
          button.btn.btn-secondary(type='button' tabindex='2' data-bs-dismiss='modal')= self.t('cancel')
          button.btn.btn-primary(type='submit' tabindex='3')= self.t('ok')
