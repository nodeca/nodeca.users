.modal.fade(tabindex='-1' role='dialog' aria-hidden='true')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h4.modal-title=self.t('title')
        button.close(type='button' tabindex='-1' data-dismiss='modal') &times;
      .modal-body
        p
          if self.hostname
            strong #{self.ip}, #{self.hostname}
          else
            strong #{self.ip}

        pre: code= self.whois
      .modal-footer
        button.btn.btn-secondary(type='button' tabindex='4' data-dismiss='modal')=self.t('close')
