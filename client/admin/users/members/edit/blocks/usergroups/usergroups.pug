- var is_member_of = {};
- self.value.forEach(function (u) { is_member_of[u] = true; });
label.col-form-label.col-3=self.t(self.name)
.col-4.control-value
  select.user-edit-usergroup-select.form-control(multiple, name=self.name)
    each usergroup in self.values
      option(value=usergroup.value, selected=is_member_of[usergroup.value])= usergroup.name
  .form-text
    -
      var text = self.values.filter(function (usergroup) { return is_member_of[usergroup.value]; })
                            .map(function (usergroup) { return usergroup.name; })
                            .join(', ');
    = text
